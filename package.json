{
  "name": "todo",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "concurrently \"bun build:server\" \"bun build:frontend\"",
    "build:frontend": "cd frontend && bun run build",
    "build:server": "cross-env NODE_ENV=production bun run scripts/build.ts",
    "dev": "concurrently \"bun dev:frontend\" \"bun dev:server\"",
    "dev:frontend": "cd frontend && bun dev",
    "dev:server": "bun run --hot server/app.ts",
    "format": "prettier --write .",
    "start": "cd dist && cross-env NODE_ENV=production bun run index.js"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.2",
    "@hono/zod-validator": "^0.2.2",
    "@trpc/server": "^11.0.0-rc.477",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "hono": "^4.5.6",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bun": "latest",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.6.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
