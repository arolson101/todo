{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    /* path aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~shared/*": ["./shared/*"],
      "~server/*": ["./server/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["DOM"],
    "moduleSuffixes": ["._", ".android", ".ios", ".native", ".web", ""]
  }
}
